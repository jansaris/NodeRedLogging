@page
@model NodeRedLogging.LoggingModel
@{
    ViewData["Title"] = "Logging";
}

<h1>Logging</h1>
<table class="table">
    <thead>
    <tr>
        <th>Timestamp</th>
        <th>Level</th>
        <th>Flow</th>
        <th>Node</th>
        <th>Message</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var contact in Model.Logs)
    {
        <tr>
            <td> @contact.Timestamp  </td>
            <td> @contact.Level  </td>
            <td> @contact.Flow </td>
            <td> @contact.Node </td>
            <td> @contact.Message  </td>
        </tr>
    }
    </tbody>
</table>

